{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"strictFunctionTypes": false,
    "strictDomEventTypes": false,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2020", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@iben/utils": ["libs/javascript/utils/src/index.ts"],
			"@lib/core": ["libs/javascript/core/src/index.ts"],
			"@lib/ngx-authentication": ["libs/angular/authentication/src/index.ts"],
			"@lib/ngx-cookies": ["libs/angular/cookies/src/index.ts"],
			"@lib/ngx-core": ["libs/angular/core/src/index.ts"],
			"@lib/ngx-forms": ["libs/angular/forms/src/index.ts"],
			"@lib/ngx-i18n": ["libs/angular/i18n/src/index.ts"],
			"@lib/ngx-inform": ["libs/angular/inform/src/index.ts"],
			"@lib/ngx-layout": ["libs/angular/layout/src/index.ts"],
			"@lib/ngx-store": ["libs/angular/store/src/index.ts"],
			"@lib/ngx-utils": ["libs/angular/utils/src/index.ts"],
			"@lib/rxjs": ["libs/javascript/rxjs/src/index.ts"],
			"@lib/types/authentication": ["libs/javascript/types/authentication/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
